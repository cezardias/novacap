<?php
class Model_aditivo extends Model {
	
	 function detail(){
		$query = $this->db->get_where('Aditivos', array('Id' => $this->uri->segment(3)));
		return $query->result();
	}
	
	function add_record($data) {
	$this->db->insert('Aditivos', $data);
	return;
	}

	function scope_identity() {
		$query = 'SELECT SCOPE_IDENTITY() as ultimoid';
		$query = $this->db->query($query);
		return $query->result();
	}	
	
	//Lista Aditivos para gerar a tabelada página inicial
	function listAditivo(){
		$query = $this->db->order_by("AditivoDenominacao", "asc");		
		$query = $this->db->get_where('Aditivos', array('ProcessoId' => $this->uri->segment(3),'LoteId' => $this->uri->segment(4)));
		return $query->result();
	}
	
	function delete_row(){
		$this->db->where('id', $this->uri->segment(3));
		$this->db->delete('Aditivos');
		$redirecionamento = base_url()."aditivo/index/".$this->uri->segment(4)."/".$this->uri->segment(5);
		redirect($redirecionamento);
	}
	
	function update_record($data,$id) {
		$this->db->where('id', $id);
		$this->db->update('Aditivos', $data);
	}

	function lista_aditivo_view(){
		$query = $this->db->get_where('ListaAditivos', array('ProcessoId' => $this->uri->segment(3),'LoteId' => $this->uri->segment(4)));
		return $query->result();	
	}
}